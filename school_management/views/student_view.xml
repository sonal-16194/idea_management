<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.server" id="action_mark_as_done" >
        <field name="name">Mark as Done</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_student_student"/>
        <field name="binding_model_id" ref="model_student_student"/>
        <field name="state">code</field>
        <field name="code">
            for record in records:
                if record.status == "inprogress":
                    record.action_done()
        </field>
    </record>  


   

	<record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <record id="action_student_student_tree_final" model="ir.ui.view">
        <field name="name">Students</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="roll_number"/>
                <field name="standard"/>
                <field name="s_name" />
                <field name="mo_number" />
                <field name="status" widget="statusbar" string="Status" />
            </tree>
        </field>
    </record>

    <record id="action_student_student_form_final" model="ir.ui.view">
        <field name="name">Students Form View</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft,inprogree,done,cancle"/>
                    <button name="state_change_done" type="object" string="set to draft" />
                    <button name="state_change_inprogress" type="object" string="set to done" />
                    <button name="state_change_cancle" type="object" string="set to draft" />
                    <button name="state_change_draftc" type="object" string="set to cancle " />
                    <button name="state_change_drafti" type="object" string="set to inprogress" />
                    <button name="check_orm" type="object" string="Check orm" />
                </header>
                <sheet>
                    <group> 
                        <group>                       
                            <field name="name" />
                            <field name="status" />
                            <field name="description" />
                            <field name="birth_date" />
                            <field name="age" />
                            <field name="full_name" />
                            <field name="country_id" />
                            <field name="quantity" />
                            <field name="roll_number"/>
                            <field name="standard"/>
                            <field name="price" />
                            <field name="total" />
                            <field name="total_compute" />
                            <field name="country_ids" widget="many2many_tags" />
                        </group>    
                        <group>
                            <field name="content" />
                            <field name="file_data" widget="image" class="oe-avatar" options="{'preview_image': 'file_data'}"/>
                            <field name="s_name" />
                            <field name="mo_number" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>   

    <menuitem id="school_management" name="School Management" />
    <menuitem id="menu_student" name="Students Menu" parent="school_management" />
    <menuitem id="sub_menu_student" name="Students Records" parent="menu_student" action="action_student" />

</odoo>